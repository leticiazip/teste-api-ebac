pipeline {
    agent any

    stages {
        stage('Clonar repositÃ³rio') {
            steps {
                git branch: 'main', url: 'https://github.com/leticiazip/teste-api-ebac-exercicio.git'
            }
        }
        stage('Instalar dependencia') {
            steps {
                bat 'npm install'
                bat 'npm install serverest'
                bat 'npm install cypress'
                bat 'npm install wait-on'
            }
        }
        stage('Rodar servidor') {
           steps {
                bat 'npx start-server-and-test start-server http://localhost:3500 test'
            }
        }
        stage('Executar teste') {
            steps {
                bat '''set NO_COLOR=1
                    npm run cy:run'''
            }
        }
    }
}